<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/btn_query_all_man"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询所有man"
        android:onClick="clickHandle"
        />

    <Button
        android:id="@+id/btn_messenger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Messenger通信"
        android:onClick="clickHandle"
        />

    <Button
        android:id="@+id/btn_math_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="远程加法运算"
        android:onClick="clickHandle"
        />

    <Button
        android:id="@+id/btn_hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="远程SayHello"
        android:onClick="clickHandle"
        />

    <Button
        android:id="@+id/btn_socket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Socket通信"
        android:onClick="clickHandle"
        />

    <Button
        android:id="@+id/btn_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="乱码测试"
        android:onClick="clickHandle"
        />

</LinearLayout>
